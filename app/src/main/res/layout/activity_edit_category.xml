<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#d8d2bc"
    tools:context="com.example.klaudia.configapp.EditCategory">

    <TextView android:text="@string/edit_category" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="15dp" />
    <TableRow
        android:paddingBottom="10dp"
        android:paddingLeft="12dp">
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/audio1Path"
            android:background="#fffeee"
            android:width="200dp" />
        <Button
            android:id="@+id/addAudioBtn"
            android:text="@string/add_audio"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dp" />
    </TableRow>
    <TableRow
        android:paddingBottom="10dp"
        android:paddingLeft="12dp">
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/audio2Path"
            android:background="#fffeee"
            android:width="200dp"/>
        <Button
            android:id="@+id/addAudio2Btn"
            android:text="@string/add_audio"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dp" />
    </TableRow>
    <TableRow
        android:paddingBottom="10dp"
        android:paddingLeft="12dp">
        <TextView android:text="@string/status"
            android:layout_column="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Spinner
            android:id="@+id/statusSpinner"
            android:layout_column="1"
            android:layout_width="fill_parent"
            android:background="#fffeee"/>
    </TableRow>
    <TableRow>
        <Button android:id="@+id/saveBtn"
            android:text="@string/save"/>
    </TableRow>
</TableLayout>
